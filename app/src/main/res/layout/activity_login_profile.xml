<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_20"
    tools:context=".LoginProfile">


    <TextView
        android:id="@+id/profile_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="My Profile"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_head_text"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_picture"
        app:layout_constraintStart_toStartOf="@+id/profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <TextView
        android:id="@+id/profile_exam_amount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Active now"
        app:layout_constraintEnd_toEndOf="@+id/profile_name_text"
        app:layout_constraintStart_toStartOf="@+id/profile_name_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_text" />

    <TextView
        android:id="@+id/profile_user_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="rakib2@gmail.com"
        app:layout_constraintEnd_toEndOf="@+id/profile_exam_amount_text"
        app:layout_constraintStart_toStartOf="@+id/profile_exam_amount_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_exam_amount_text" />

    <Button
        android:id="@+id/profile_sign_out_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_add_contest_btn"
        app:layout_constraintStart_toStartOf="@+id/profile_add_contest_btn"
        app:layout_constraintTop_toBottomOf="@+id/profile_add_contest_btn" />

    <Button
        android:id="@+id/profile_add_contest_btn"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Add Contest"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_user_type_text"
        app:layout_constraintStart_toStartOf="@+id/profile_user_type_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_type_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
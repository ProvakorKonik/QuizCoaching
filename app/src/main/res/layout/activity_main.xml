<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_10"
    tools:context=".View.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/level_e_imagecard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/main_text_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toEndOf="@+id/main_text_user_name"
        app:layout_constraintTop_toTopOf="@+id/main_text_ready"
        app:layout_constraintVertical_bias="0.0">
        <ImageView
            android:id="@+id/main_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_round_account_circle_24"/>
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/main_text_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:text="Ready to learn"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Sourav"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/main_text_ready"
        app:layout_constraintTop_toBottomOf="@+id/main_text_ready" />

    <TextView
        android:id="@+id/main_text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Improve your skills by practicing"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/main_text_user_name"
        app:layout_constraintTop_toBottomOf="@+id/main_text_user_name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_quiz_recylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text_start" />



</androidx.constraintlayout.widget.ConstraintLayout>